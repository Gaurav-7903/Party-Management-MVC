@model IEnumerable<ProductRateResponseDTO>

@{
    ViewBag.Title = "Product Rate List";
}

<h1> Product Rate History </h1>

<table id="ProductsRateTable" class="display table table-striped shadow-sm p-3 my-3 bg-dark rounded p-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Effective Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductRateId</td>
                <td>@product.ProductName</td>
                <td>@product.Rate</td>
                <td>@product.EffectiveDate.ToString("dd-mm-yyyy")</td>
                <td> <a asp-action="Details" asp-controller="Product" asp-route-productId="@product.productId" class="btn btn-info btn-sm">Details</a></td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#ProductsRateTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                columnDefs: [
                    {
                        targets: -1, // Targets the last column
                        searchable: false,// Disables searching/filtering for this column
                        sortable: false
                    }
                ]
            });
        });
    </script>

}
