@model ProductResponseDTO
@{
    ViewBag.Title = "Delete Produt";
}

<h1> Delete Product </h1>

<div class="w-50 d-flex flex-column shadow-sm p-3 mb-5 bg-dark rounded p-3">

<form asp-action="Delete" asp-controller="Produt" method="post">
    <div class="form-group mb-3">
        <input type="hidden" asp-for="ProductId" />

        <label asp-for="ProductName">Product Name</label>
        <input class="form-control bg-dark" asp-for="ProductName" value="@Model.ProductName" readonly>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price">Product Price</label>
        <input class="form-control bg-dark" asp-for="Price" value="@Model.Price" readonly>
        <span asp-validation-for="ProductName" class="danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Delete</button>

        <div asp-validation-summary="All" class="error"></div>

    @if (ViewBag.Errors != null)
    {
        <div class="danger ml">
            <ul>
                @foreach (string error in ViewBag.Errors)
                {
                    <li class="ml">@error</li>
                }
            </ul>
        </div>
    }
</form>