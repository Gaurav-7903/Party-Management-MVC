@model PartyResponseDTO
@{
    ViewBag.Title = "Delete Party";
}

<h1> Delete Party </h1>


<div class="w-50 mx-auto d-flex flex-column">

    <form asp-action="Delete" asp-controller="Party" method="post">
        <div class="form-group mb-3">
            <input type="hidden" asp-for="PartyId" />
            <label asp-for="PartyName">Party Name</label>
            <input class="form-control bg-dark" asp-for="PartyName" placeholder="Enter Party Name" value="@Model.PartyName" readonly>
            <span asp-validation-for="PartyName" class="danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Delete</button>
    </form>

</div>


    